<?xml version="1.0" ?>
<!--# # -->

<Problem xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="geos_v0.0.xsd">

  
  <Solvers>
    <SolidMechanics_LagrangianFEM name="lagsolve" 
                                  courant="0.25"/>
  </Solvers>

  
  <Mesh>
    <InternalMesh name="mesh1"
                  elementType="C3D8" 
                  xCoords="0, 3"
                  yCoords="0, 1"
                  zCoords="0, 1"
                  nx="4"
                  ny="1"
                  nz="1"
                  cellBlockNames="cb1"/>
  </Mesh>


  <SolverApplications>
    <Application name="1"
                 beginTime="0.0" 
                 endTime="1.0e-3" 
                 dt="1.0e-5"
                 solvers="lagsolve" />
  </SolverApplications>


  <NumericalMethods>

    <BasisFunctions> 
        <LagrangeBasis3 name="linearBasis"  degree = "1"  />
    </BasisFunctions>
    
    <QuadratureRules>
        <GaussQuadrature3 name="gaussian"   degree="2"  />    
    </QuadratureRules>
    
    <FiniteElements>
        <finiteElementSpace name="FE1" basis="linearBasis" quadrature="gaussian" />
    </FiniteElements>
  </NumericalMethods>

  <ElementRegions>
    <!-- ElementRegion name="Region1" cellBlocks="cb1"     numericalMethod="FE1" material="granite"/-->
    <ElementRegion name="Region2" cellBlocks="cb1" numericalMethod="FE1" material="shale" />
  </ElementRegions>

  <Constitutive>
      <LinearElasticIsotropic name="granite"
                              density="2700"
                              bulkModulus="5.5556e9"
                              shearModulus="4.16667e9"/>
      <LinearElasticIsotropic name="shale"
                              density="2700"
                              bulkModulus="5.5556e9"
                              shearModulus="4.16667e9"/>
      <LinearElasticIsotropic name="water"
                              density="1000"
                              bulkModulus="2.0e9"
                              shearModulus="0.0"/>
  </Constitutive>


  <BoundaryConditions>
    <DirichletBoundaryCondition name="xconstraint" component="0" fieldName="Velocity" fieldType="Vector" object="Node" scale="0.0" setNames="xneg xpos"/>
    <DirichletBoundaryCondition name="yconstraint" component="1" fieldName="Velocity" fieldType="Vector" object="Node" scale="0.0" setNames="yneg ypos"/>
    <DirichletBoundaryCondition name="zconstraint" component="2" fieldName="Velocity" fieldType="Vector" object="Node" scale="0.0" setNames="zneg zpos"/>
  </BoundaryConditions>


  <Tables>
    <Table1D coord="0.0, 1.0, 2.0" value="0.0, 1.0, 1.0" name="ttable1"/>
  </Tables>
  

  <Partition>
    <SpatialPartition xPar="1" yPar="1" zPar="1"/>
  </Partition>

 
  <Output parallelThreads="32" plotInterval="20.0" plotFileRoot="plot" restartInterval="1e6" slaveDirectory="sub" writeFEMEdges="0" writeFEMFaces="1" writePlot="1" writeRestart="1" maxWallTime="{60*60*15.925}"/>
  

  <Nodesets>
    <Box name="perf" type="0" xMin="0, 0, 0" xMax="1, 1, 1"/>
  </Nodesets>


  <Fracture failCriterion="1" failGap="0.0004" fractureFlag="100" preFractureSetName="perf" rockToughness="1e6" separableSet="all"/>

</Problem>

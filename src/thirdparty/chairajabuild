#export CUDA_ENABLED=ON


#CLANG opt configuration
export CHAI_BUILD_TYPE=cpu-no-rm
export CPLUSPLUS=clang
export CC=clang 
export CHAI_ARGS=
export CUDA_ENABLED=OFF


#export CALIPER_INSTALL=
#export BOOST_INSTALL=

mkdir raja-install 

cd chai/src   &&  make $CHAI_BUILD_TYPE CPP=$CPLUSPLUS $CHAI_ARGS CALIPER_DIR=$CALIPER_INSTALL C_COMPILER=$CC  && mkdir -p ../lib && cp *.a ../lib ;

cd ../../raja && rm -rf build && mkdir build && cd build && cmake .. -DRAJA_ENABLE_CUDA=$CUDA_ENABLED -DRAJA_ENABLE_TESTS=OFF -DCMAKE_INSTALL_PREFIX=`pwd`/../../raja-install && make all install



